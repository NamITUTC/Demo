<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_mini">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimen16dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen16dp</item>
    </style>

    <style name="title_item">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textSize">@dimen/dimen20dp</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
